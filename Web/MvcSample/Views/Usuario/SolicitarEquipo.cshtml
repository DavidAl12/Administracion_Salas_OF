@model Servicios.Models.SolicitarEquipoViewModel
<h2>Solicitar Equipo Individual</h2>

<form asp-action="SolicitarEquipo" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row mb-3">
        <div class="col">
            <label>Sala</label>
            <select asp-for="SalaId" class="form-control" id="comboSalaEquipo">
                <option value="">Selecciona una sala</option>
                @foreach (var sala in Model.SalasDisponibles)
                {
                    <option value="@sala.Id">@sala.Nombre</option>
                }
            </select>
            <span asp-validation-for="SalaId" class="text-danger"></span>
        </div>
        <div class="col">
            <label>Equipo</label>
            <select asp-for="EquipoId" class="form-control" id="comboEquipo">
                <option value="">Primero selecciona una sala</option>
                @foreach (var eq in Model.EquiposDisponibles)
                {
                    <option value="@eq.Id">@eq.Serial</option>
                }
            </select>
            <span asp-validation-for="EquipoId" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3">
        <label>Fecha y Hora de Inicio</label>
        <input asp-for="FechaInicio" class="form-control" type="datetime-local" />
        <span asp-validation-for="FechaInicio" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label>Fecha y Hora de Fin</label>
        <input asp-for="FechaFin" class="form-control" type="datetime-local" />
        <span asp-validation-for="FechaFin" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Enviar Solicitud de Equipo</button>
</form>

@section Scripts {
    <script>
        document.getElementById('comboSalaEquipo').addEventListener('change', function () {
            var salaId = this.value;
            var comboEquipo = document.getElementById('comboEquipo');
            comboEquipo.innerHTML = '<option value="">Cargando...</option>';
            if (salaId) {
                fetch('/Usuario/EquiposPorSala?salaId=' + salaId)
                    .then(res => res.json())
                    .then(data => {
                        comboEquipo.innerHTML = data.length > 0 ? "" : '<option value="">No hay equipos</option>';
                        data.forEach(eq =>
                            comboEquipo.innerHTML += `<option value="${eq.id}">${eq.serial}</option>`);
                    });
            } else {
                comboEquipo.innerHTML = '<option value="">Primero selecciona una sala</option>';
            }
        });
    </script>
}
