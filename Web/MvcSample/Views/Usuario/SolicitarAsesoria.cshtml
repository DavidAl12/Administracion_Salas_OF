@model Servicios.Models.AsesoriaViewModel
@{
    ViewData["Title"] = "Solicitar Asesoría Técnica";
}
<h2>@ViewData["Title"]</h2>
<form method="post">
    <div class="mb-3">
        <label asp-for="FechaPreferida" class="form-label">Fecha y Hora Preferida</label>
        <input asp-for="FechaPreferida" type="datetime-local" class="form-control" />
        <span asp-validation-for="FechaPreferida" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label">¿En qué necesitas ayuda?</label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="alert alert-info mt-3">
        <strong>Ejemplos de asesorías:</strong>
        <ul>
            <li>Instalación de software específico</li>
            <li>Configuración de herramientas y aplicaciones</li>
            <li>Resolución de problemas técnicos</li>
            <li>Capacitación en uso de equipos</li>
        </ul>
    </div>
    <button type="submit" class="btn btn-primary">Solicitar Asesoría</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
