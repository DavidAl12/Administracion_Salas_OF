@model Domain.Sala


@{
    ViewData["Title"] = "Crear Sala";
}

<h2>Crear Sala</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span class="text-danger" asp-validation-for="Nombre"></span>
    </div>

    <div class="form-group mb-3">
        <label>Ubicación</label>
        <input asp-for="Ubicacion" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Estado</label>
        <input asp-for="Estado" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label>Capacidad</label>
        <input asp-for="Capacidad" type="number" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a class="btn btn-secondary" href="/Sala/Index">Cancelar</a>
</form>
