@model Servicios.Models.SalaEditViewModel

<h2 class="fw-bold mb-4">Editar Sala</h2>
<form method="post">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" required />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label>Ubicación</label>
        <input asp-for="Ubicacion" class="form-control" required />
        <span asp-validation-for="Ubicacion" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label>Capacidad</label>
        <input asp-for="Capacidad" class="form-control" type="number" required />
        <span asp-validation-for="Capacidad" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label>Estado</label>
        <select asp-for="Estado" class="form-control" required>
            <option value="Disponible">Disponible</option>
            <option value="Ocupada">Ocupada</option>
            <option value="En mantenimiento">En mantenimiento</option>
        </select>
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label>Responsable (opcional)</label>
        <input asp-for="Responsable" class="form-control" />
    </div>
    <button class="btn btn-primary">Actualizar</button>
    <a class="btn btn-secondary" href="/Sala">Volver</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
