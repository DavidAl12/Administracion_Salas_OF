@model IEnumerable<Domain.Sala>

@{
    ViewData["Title"] = "Gestión de Salas";
}

<link rel="stylesheet" href="~/css/indexSala.css" /> 

<div class="usc-dashboard container mt-4 salas-page">

    <!-- TÍTULO PRINCIPAL -->
    <div class="mb-4">
        <h2 class="usc-title-primary">Gestión de Salas</h2>
        <p class="usc-subtitle-primary">Administra las salas de cómputo de la universidad</p>
    </div>

    <!-- PESTAÑAS -->
    <ul class="nav usc-tabs justify-content-center mb-4">
        <li class="nav-item">
            <a class="nav-link usc-tab-item" href="/Admin/Dashboard">Resumen</a>
        </li>
        <li class="nav-item">
            <a class="nav-link usc-tab-item active" href="/Sala">Salas</a>
        </li>
        <li class="nav-item">
            <a class="nav-link usc-tab-item" href="/Equipo">Equipos</a>
        </li>
        <li class="nav-item">
            <a class="nav-link usc-tab-item" href="/Usuarios">Usuarios</a>
        </li>
    </ul>

    <!-- CARD ENCABEZADO -->
    <div class="card shadow-sm p-4 mb-4 salas-card-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h4 class="header-title m-0">Salas Registradas</h4>
                <small class="header-subtitle">Listado de todas las salas de la USC</small>
            </div>

            <a class="btn btn-primary btn-add-sala" href="/Sala/Create">
                <i class="bi bi-plus-circle"></i> Nueva Sala
            </a>
        </div>
    </div>

    <!-- TABLA DE SALAS -->
    <div class="card shadow-sm p-4 salas-table-card">
        <table class="table salas-table align-middle">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Ubicación</th>
                    <th>Capacidad</th>
                    <th>Estado</th>
                    <th>Responsable</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sala in Model)
                {
                    <tr>
                        <td>@sala.Nombre</td>

                        <td>
                            <i class="bi bi-geo-alt-fill text-primary"></i>
                            @sala.Ubicacion
                        </td>

                        <td>@sala.Capacidad personas</td>

                        <td>
                            @if (!string.IsNullOrEmpty(sala.Estado))
                            {
                                var est = sala.Estado.ToLower();

                                if (est == "disponible")
                                {
                                    <span class="usc-badge-green">Disponible</span>
                                }
                                else if (est == "ocupada")
                                {
                                    <span class="usc-badge-red">Ocupada</span>
                                }
                                else if (est.Contains("mantenimiento"))
                                {
                                    <span class="usc-badge-yellow">Mantenimiento</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@sala.Estado</span>
                                }
                            }
                            else
                            {
                                <span class="badge bg-secondary">Sin estado</span>
                            }
                        </td>

                        <td>@(sala.Responsable ?? "-----")</td>

                        <td class="text-end">
                            <a class="btn btn-outline-primary btn-sm" href="/Sala/Edit/@sala.Id">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a class="btn btn-outline-danger btn-sm" href="/Sala/Delete/@sala.Id">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
