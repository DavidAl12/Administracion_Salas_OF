@model IEnumerable<Domain.Sala>

@{
    ViewData["Title"] = "Salas Disponibles";
}

<h2>Salas Disponibles</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Número de Sala</th>
            <th>Ubicación</th>
            <th>Capacidad</th>
            <th>Responsable</th>
            <th>Acción</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var sala in Model)
        {
            <tr>
                <td>@sala.Nombre</td>
                <td>@sala.Ubicacion</td>
                <td>@sala.Capacidad</td>
                <td>@sala.Responsable</td>

                <td>
                    <a class="btn btn-primary"
                       asp-action="Solicitar"
                       asp-route-id="@sala.Id">
                        Solicitar sala
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

