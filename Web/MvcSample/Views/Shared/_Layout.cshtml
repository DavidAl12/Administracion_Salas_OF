<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] -SISRoom</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MvcSample.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Arimo:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/modal-salas.css" />

</head>
<body>
    <header class="usc-header">
        <div class="usc-header-left d-flex align-items-center">
            <img src="~/img/usc_logo.png" class="usc-logo" />

            <div class="usc-title-group ms-3">
                <span class="usc-title">Sistema de Gestión de Salas</span>
                <span class="usc-subtitle">Universidad Santiago de Cali</span>
            </div>
        </div>

        <div class="usc-header-right d-flex align-items-center">

            <!-- 🔹 Mostrar Login o Logout según autenticación -->
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <!-- Usuario AUTENTICADO -->
                <div class="usc-user-info text-end me-3">
                    <span class="usc-user-name">Hola, @User.Identity.Name</span>
                </div>

                <form class="m-0"
                      asp-area="Identity"
                      asp-page="/Account/Logout"
                      asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"
                      method="post">
                    <button type="submit" class="btn usc-btn-logout">Cerrar Sesión</button>
                </form>
            }
            else
            {
                <!-- Usuario NO autenticado -->
                <a class="btn usc-btn-logout" asp-area="Identity" asp-page="/Account/Login">
                    Iniciar sesión
                </a>
            }
        </div>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
