@{
    ViewData["Title"] = "Inicio";
}

<link rel="stylesheet" href="~/css/Home.css" />

<div class="usc-landing">


    <!-- HERO -->
    <section class="usc-hero text-center">
        <h1 class="usc-hero-title">Gestión Inteligente de Recursos Informáticos</h1>
        <p class="usc-hero-subtitle">
            Plataforma integral para la administración, coordinación y reserva de salas de cómputo y equipos tecnológicos.
        </p>
        <a href="/Identity/Account/Login" class="btn btn-primary btn-lg usc-btn-primary">
            Comenzar Ahora <i class="bi bi-arrow-right"></i>
        </a>
    </section>

    <!-- FUNCIONALIDADES -->
    <section class="usc-section-cards text-center">
        <h2 class="usc-section-title">Funcionalidades del Sistema</h2>

        <div class="row justify-content-center mt-4 g-4">

            <!-- CARD 1 Administrador -->
            <div class="col-md-4">
                <div class="usc-card p-4 border-purple-top">
                    <div class="usc-icon bg-purple">
                        <i class="bi bi-shield"></i>
                    </div>
                    <h4 class="usc-card-title">Administrador</h4>
                    <ul class="usc-list">
                        <li><i class="bi bi-check-circle"></i> Gestión completa de salas y equipos</li>
                        <li><i class="bi bi-check-circle"></i> Administración de usuarios y roles</li>
                        <li><i class="bi bi-check-circle"></i> Control total del sistema</li>
                    </ul>
                </div>
            </div>

            <!-- CARD 2 Coordinador -->
            <div class="col-md-4">
                <div class="usc-card p-4 border-blue-top">
                    <div class="usc-icon bg-blue">
                        <i class="bi bi-person-workspace"></i>
                    </div>
                    <h4 class="usc-card-title">Coordinador</h4>
                    <ul class="usc-list">
                        <li><i class="bi bi-check-circle"></i> Gestión de equipos individuales</li>
                        <li><i class="bi bi-check-circle"></i> Aprobación de solicitudes</li>
                        <li><i class="bi bi-check-circle"></i> Visualización de reportes y ocupación</li>
                    </ul>
                </div>
            </div>

            <!-- CARD 3 usuarios -->
            <div class="col-md-4">
                <div class="usc-card p-4 border-green-top">
                    <div class="usc-icon bg-green">
                        <i class="bi bi-people-fill"></i>
                    </div>
                    <h4 class="usc-card-title">Usuarios</h4>
                    <ul class="usc-list">
                        <li><i class="bi bi-check-circle"></i> Consulta de salas disponibles</li>
                        <li><i class="bi bi-check-circle"></i> Solicitud de salas y equipos</li>
                        <li><i class="bi bi-check-circle"></i> Reporte de daños y asesorías</li>
                    </ul>
                </div>
            </div>

        </div>
    </section>

    <!-- SERVICIOS -->
    <section class="usc-section text-center mt-5">
        <h2 class="usc-section-title">Servicios Disponibles</h2>

        <div class="row justify-content-center mt-4 g-4">

            <div class="col-md-3">
                <div class="usc-service-card">
                    <div class="usc-service-icon bg-blue-light"><i class="bi bi-door-open"></i></div>
                    <h5 class="usc-service-title">Reserva de Salas</h5>
                    <p class="usc-service-desc">Reserva salas completas para trabajos grupales.</p>
                </div>
            </div>

            <div class="col-md-3">
                <div class="usc-service-card">
                    <div class="usc-service-icon bg-green-light"><i class="bi bi-pc-display"></i></div>
                    <h5 class="usc-service-title">Préstamo de Equipos</h5>
                    <p class="usc-service-desc">Solicita computadores individuales.</p>
                </div>
            </div>

            <div class="col-md-3">
                <div class="usc-service-card">
                    <div class="usc-service-icon bg-yellow-light"><i class="bi bi-exclamation-circle"></i></div>
                    <h5 class="usc-service-title">Reporte de Incidencias</h5>
                    <p class="usc-service-desc">Reporta daños o fallas técnicas.</p>
                </div>
            </div>

            <div class="col-md-3">
                <div class="usc-service-card">
                    <div class="usc-service-icon bg-purple-light"><i class="bi bi-calendar-week"></i></div>
                    <h5 class="usc-service-title">Gestión de Horarios</h5>
                    <p class="usc-service-desc">Consulta disponibilidad en tiempo real.</p>
                </div>
            </div>

        </div>
    </section>

</div>
