@model IEnumerable<Domain.Usuario>

<h2 class="fw-bold mb-4">Usuarios Registrados</h2>

<a class="btn btn-primary mb-3" href="/Usuarios/Create">Crear Usuario</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Fecha de Registro</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Nombre</td>
                <td>@u.Email</td>
                <td>@u.Rol</td>
                <td>@u.FechaRegistro.ToString("yyyy-MM-dd")</td>
                <td>
                    <a class="btn btn-warning btn-sm" href="/Usuarios/Edit/@u.Id">Editar</a>
                    <a class="btn btn-danger btn-sm" href="/Usuarios/Delete/@u.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
