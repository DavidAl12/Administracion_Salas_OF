@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<link rel="stylesheet" href="~/css/Login.css" />

<div class="inicio-de-sesion">
    <div class="card login-card">
        <!-- HEADER -->
        <div class="card-header">
            <img class="login" src="~/img/usc_logo.png" />

            <div class="login2">
                <div class="card-title">
                    <div class="sistema-de-gesti-n-de-salas">
                        Sistema de Gestión de Salas
                    </div>
                </div>
                <div class="card-description">
                    <div class="universidad-santiago-de-cali">
                        Universidad Santiago de Cali
                    </div>
                </div>
            </div>
        </div>

        <!-- FORMULARIO -->
        <div class="card-content">
            <form id="account" method="post" class="w-100">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="login3">

                    <!-- CORREO -->
                    <div class="container">
                        <div class="primitive-label">
                            <div class="correo-electr-nico">Correo Electrónico</div>
                        </div>

                        <div class="input">
                            <input asp-for="Input.Email"
                                   class="form-control bg-transparent border-0 shadow-none"
                                   autocomplete="username"
                                   aria-required="true"
                                   placeholder="correo@usc.edu.co" />

                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <!-- CONTRASEÑA -->
                    <div class="container">
                        <div class="primitive-label">
                            <div class="contrase-a">Contraseña</div>
                        </div>

                        <div class="input">
                            <input asp-for="Input.Password"
                                   class="form-control bg-transparent border-0 shadow-none"
                                   autocomplete="current-password"
                                   aria-required="true"
                                   placeholder="••••••••" />
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <!-- RECORDAR -->
                    <div class="checkbox mb-2">
                        <label asp-for="Input.RememberMe" class="form-label d-flex align-items-center gap-2">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>

                    <!-- BOTÓN -->
                    <button id="login-submit" type="submit" class="button">
                        <div class="iniciar-sesi-n">Iniciar Sesión</div>
                    </button>
                </div>

                <!-- OPCIONES -->
                <div class="mt-3">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar correo de confirmación</a>
                    </p>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
